# Database
# For local development (SQLite):
# DATABASE_URL="file:./dev.db"
# For production (PostgreSQL):
DATABASE_URL="postgresql://username:password@localhost:5432/signposting"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_VERSION="Beta v1.0"

# Feature Flags
DONATIONS_ENABLED="false"

# Database Seeding (for production setup)
SEED_SECRET="your-seed-secret-here"

# Azure OpenAI Configuration (for instruction improvement feature)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-api-key-here"
AZURE_OPENAI_DEPLOYMENT="your-deployment-name"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# Approximate cost per 1K tokens for this Azure OpenAI deployment.
# These are defaults based on public Azure OpenAI gpt-4o-mini guidance (~$0.0005 / 1K input, ~$0.0015 / 1K output) [Nov 2024/Feb 2025].
# Adjust in production if your Azure bill differs.
AZURE_OPENAI_COST_INPUT_PER_1K_USD=0.0005
AZURE_OPENAI_COST_OUTPUT_PER_1K_USD=0.0015

# Rough USD -> GBP conversion for display in dashboard.
USD_TO_GBP_RATE=0.80